<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Startup Information"
            android:textColor="#307D7E"
            android:textSize="40dp"
            android:textStyle="bold"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=" Company Name:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"
            />

        <TextView
            android:id="@+id/et_companyname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/user"
            android:hint="Enter your company name"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:required="true"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Company Email:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint="Enter your email"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:required="true"
            android:textSize="19sp"
            android:drawableStart="@drawable/email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Founded Year:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>

        <EditText
            android:id="@+id/founded_year"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint="Enter year"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingTop="12dp"
            android:required="true"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Company Website:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>

        <EditText
            android:id="@+id/c_website"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint=""
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="12dp"
            android:required="true"
            android:textSize="19sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Industry:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>

        <EditText
            android:id="@+id/c_industry"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint=""
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="12dp"
            android:required="true"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Company Size:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>
        <EditText
            android:id="@+id/companysize"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint=""
            android:inputType="number"
            android:paddingStart="10dp"

            android:required="true"
            android:textSize="19sp" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="DPIIT No:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>


        <EditText
            android:id="@+id/c_dpiitno"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint=""
            android:inputType="textPersonName"
            android:paddingStart="10dp"

            android:required="true"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Growth rate:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>


        <EditText
            android:id="@+id/growthrate"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint=""
            android:inputType="number"
            android:paddingStart="10dp"

            android:required="true"
            android:textSize="19sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Burn rate`:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>


        <EditText
            android:id="@+id/burnrate"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint=""
            android:inputType="number"
            android:paddingStart="10dp"

            android:required="true"
            android:textSize="19sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Churn rate:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>


        <EditText
            android:id="@+id/churnrate"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint=""
            android:inputType="number"
            android:paddingStart="10dp"

            android:required="true"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="CAC:"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>


        <EditText
            android:id="@+id/cac"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint=""
            android:inputType="number"
            android:paddingStart="10dp"

            android:required="true"
            android:textSize="19sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="About"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>

        <EditText
            android:id="@+id/et_about"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_background"
            android:hint="About..."
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:required="true"
            android:textSize="19sp" />

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="submit" />


    </LinearLayout>
</ScrollView>